@page
@model proiect_MDP.Pages.Zboruri.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Cauta zbor dupa destinatie/companie:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Zbor[0].Destinatie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zbor[0].Companie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zbor[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zbor[0].ZborDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zbor[0].Terminal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zbor[0].ZborCategorii)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ZborD.Zboruri)
        {
            string selectedRow = "";
            if (item.ID == Model.ZborID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Destinatie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Companie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZborDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Terminal.TerminalName)
            </td>
            <td>
                @{
                   foreach (var category in item.ZborCategorii)
                   {
                      @category.Categorie.ID @: @category.Categorie.CategorieName <br />
                   }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
