@page
@model proiect_MDP.Pages.Zboruri.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Zbor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Zbor.ID" />
            <div class="form-group">
                <label asp-for="Zbor.Destinatie" class="control-label"></label>
                <input asp-for="Zbor.Destinatie" class="form-control" />
                <span asp-validation-for="Zbor.Destinatie" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Zbor.CompanieID" class="control-label">Companie aeriana</label>
                <select asp-for="Zbor.CompanieID" class="form-control" asp-items="ViewBag.CompanieID"> 
                </select>
                <span asp-validation-for="Zbor.CompanieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zbor.Pret" class="control-label"></label>
                <input asp-for="Zbor.Pret" class="form-control" />
                <span asp-validation-for="Zbor.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zbor.ZborDate" class="control-label"></label>
                <input asp-for="Zbor.ZborDate" class="form-control" />
                <span asp-validation-for="Zbor.ZborDate" class="textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zbor.TerminalID" class="control-label">Nume terminal</label>
                <select asp-for="Zbor.TerminalID" class="form-control" asp-items="ViewBag.TerminalID"> </select>
                <span asp-validation-for="Zbor.TerminalID" class="text-danger"></span>
            </div>
             
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                        @{
                        int cnt = 0;
                        foreach (var cat in Model.AssignedCategoryDataList)
                        { 
                        if (cnt++ % 3 == 0)
                        { 
                        @:</tr><tr>
                        } 
                        @:<td>
                        <input type="checkbox"
                        name="selectedCategories"
                        value="@cat.CategorieID"
                        @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                        @cat.Nume
                        @:</td>
                        } 
                        @:</tr>
                    } 
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
